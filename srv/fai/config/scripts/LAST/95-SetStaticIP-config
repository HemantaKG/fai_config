###file location /etc/network/interfaces in case of debian###

####Sample for setting up static ip configuration####
#auto eth0
#iface eth0 inet static
#address <<public or local static ip>>
#netmask <<netmask>>
#gateway <<gateway ip>>
#dns-nameservers 8.8.8.8 4.2.2.2


###Sample for setting up dhcp ip###
#auto eth0
#iface eth0 inet dhcp

#! /bin/bash
#ststic ip setup script
echo 'auto eth0' >> /target/etc/network/interfaces
echo 'iface eth0 inet static >> /target/etc/network/interfaces
#set static ip 'x.x.x.x' using switch case
case $HOSTNAME in
  node001)
    echo 'address x.x.x.x1 >> /target/etc/network/interfaces
  node001)
    echo 'address x.x.x.x2 >> /target/etc/network/interfaces
  node001)
    echo 'address x.x.x.x2 >> /target/etc/network/interfaces
    ...
  esca
echo 'netmask <<netmask>>' >> /target/etc/interfaces
echo 'gateway <<gateway ip>>' >> /target/etc/interfaces
echo 'dns-nameservers 8.8.8.8 4.2.2.2' >> /terget/etc/interfaces
    
    
